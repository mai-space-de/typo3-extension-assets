{
    "name": "maispace/assets",
    "description": "Easy inline or path-based asset inclusion (CSS, JS, SCSS) from Fluid templates. Performance-focused: minification, deferred loading, caching, and SVG sprite building.",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Maispace",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^13.4",
        "matthiasmullie/minify": "^1.3",
        "scssphp/scssphp": "^1.12"
    },
    "require-dev": {
        "armin/editorconfig-cli": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "helmich/typo3-typoscript-lint": "^3.1",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.0",
        "saschaegerer/phpstan-typo3": "^2.0",
        "typo3/testing-framework": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Maispace\\MaispaceAssets\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maispace\\MaispaceAssets\\Tests\\": "Tests"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "maispace_assets"
        }
    },
    "scripts": {
        "lint:check": [
            "@check:editorconfig",
            "@check:phpcs",
            "@check:phpstan",
            "@check:typoscript",
            "@composer validate --strict --no-check-version --no-check-all --no-check-publish"
        ],
        "lint:fix": [
            "@fix:editorconfig",
            "@fix:phpcs",
            "@check:phpstan",
            "@check:typoscript"
        ],
        "check:editorconfig": "ec -unv -e vendor/ -e inspiration/ -e public/",
        "fix:editorconfig": "ec -unvf -e vendor/ -e inspiration/ -e public/",
        "check:phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer check --config .php-cs-fixer.php --ansi --verbose --diff",
        "fix:phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --config .php-cs-fixer.php --ansi",
        "check:phpstan": "phpstan analyse --no-progress",
        "check:phpstan:baseline": "phpstan analyse --no-progress --generate-baseline=phpstan-baseline.neon",
        "check:typoscript": "typoscript-lint --fail-on-warnings -c typoscript-lint.yml Configuration/TypoScript/",
        "test": "phpunit --configuration phpunit.xml.dist",
        "test:unit": "phpunit --configuration phpunit.xml.dist --testsuite Unit"
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        },
        "sort-packages": true
    }
}
