{
    "name": "maispace/assets",
    "description": "Easy inline or path-based asset inclusion (CSS, JS, SCSS) from Fluid templates. Performance-focused: minification, deferred loading, caching, and SVG sprite building.",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Maispace",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "typo3/cms-core": "^12.4 || ^13.4",
        "matthiasmullie/minify": "^1.3",
        "scssphp/scssphp": "^1.12"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.0",
        "saschaegerer/phpstan-typo3": "^2.0",
        "typo3/testing-framework": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Maispace\\MaispaceAssets\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maispace\\MaispaceAssets\\Tests\\": "Tests"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "maispace_assets"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml.dist",
        "test:unit": "phpunit --configuration phpunit.xml.dist --testsuite Unit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        },
        "sort-packages": true
    }
}
